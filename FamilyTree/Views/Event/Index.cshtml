@model FamilyTree.Models.ViewModel.PersonEventView

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<h2>Events</h2>
<table class="table">
    <thead>
        <tr>
            <th>Person</th>
            <th>Date</th>
            <th>Location</th>
            <th>Activity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Events)
        {
            <tr>
                <td>@item.Person?.LastName  @item.Person?.FirstName</td> <!-- Assuming Person has a FullName property -->
                <td>@item.Date</td>
                <td>@item.Location</td>
                <td>@item.Activitie</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
